{
  "root":true,
  "env":{
    "node":true
  },
  "extends":[
    "plugin:vue/vue3-essential",
    "@vue/standard",
    "@vue/typescript/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions":{
    "ecmaVersion":2020
  },
  "plugins":[
    "prettier"
  ],
  "rules":{
    "prettier/prettier":[
      "warn",
      {
        "arrowParens": "avoid",
        "useTabs": true,
        "singleQuote": true,
        "tabWidth": 2,
        "jsxSingleQuote": true,
        "trailingComma": "none",
        "semi": false,
        "endOfLine": "auto",
        "bracketSpacing": true,
        "bracketSameLine": false,
        "proseWrap": "never"
      }
    ]
  }
}
